<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.storrd.pos.saver</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="inside">
                <setting string="Lock Screen Logo" help="Display a custom brand image when the PoS is locked or idle.">
                    <field name="pos_storrd_saver_screen_img"
                           filename="pos_storrd_saver_screen_img_name"/>

                    <field name="pos_storrd_saver_screen_img_name" invisible="1"/>

                    <div class="mt-2 text-muted">
                        <field name="pos_storrd_saver_instructions" nolabel="1"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>